#!/bin/bash
######################################################################
# process_replaygain
# 
# Usage:
#     process_replaygain DIRECTORY OPTS
######################################################################
Date=$(eval date +%Y%m%d)
WorkingDir=""
ScriptsDir=$HOME/code/scripts
LogFile=$ScriptsDir/logs/mp3gain-$Date.tsv
ErrLogFile=$ScriptsDir/logs/mp3gain-$Date.err.log
ReplaygainOptions="-T -k -o "
FilenamePattern="*.mp3"
FindOptions="-type d -print0"
while [[ $# > 0 ]]
do
  arg="$1"
  if [[ -d $arg ]]
  then
    WorkingDir="$(readlink -f $arg)"
  else
    ReplaygainOptions=$ReplaygainOptions$arg
  fi
  shift
done
if ! [[ $ReplaygainOptions =~ .*(-a|-r).* ]]
then
  echo "Missing required option. Please specify -a or -r."
  exit 1
elif [[ $ReplaygainOptions =~ .*-a.* ]] && [[ $ReplaygainOptions =~ .*-r.* ]]
then
  echo "Invalid options. Please specify -a or -r (not both)."
  exit 1
fi
if [[ $WorkingDir == "" ]]
then
  echo "Please specify a directory for processing."
  exit 1
fi

process_dir() {
  echo "Processing replaygain for mp3 files in "$@""
  cd "$@"
  if ls $FilenamePattern 1> /dev/null 2>&1; then
    mp3gain $ReplaygainOptions $FilenamePattern >> $LogFile 2>> $ErrLogFile
  else
    echo "No matching files in this directory."
  fi
}
if [[ $ReplaygainOptions =~ .*-a.* ]]
then
  echo "Using album mode for each subdirectory of $WorkingDir"
  find $WorkingDir/*/ $FindOptions | while read -d $'\0' -r dir
  do
    process_dir "$dir"
  done
else
  echo "Using track mode for all tracks in $WorkingDir"
  process_dir "$WorkingDir"
fi
